    FB.api('/297440533921751/feed', "POST", {access_token: accessToken, message: input_value}, function(response) {
      console.log(response);
      testPagesAPI();
    });
    
 }

 function unpublish_form(){
    var input_value = document.getElementById("unpublishForm").value;
    var accessToken = 'EAADnA4P3q70BAKUFr2P8RYFNock8vqDMyayQZCofaxOcFuPxR7ZCnFsbd1RZA6MZB3keXMOrDZBq1NvIbjZC8ZAfZBrp3O9wSZBxHVKxgTHY3XDEtSgSj9S8pF0rFnwTQtUQXKlpwyegPRKqlzvZAO1IQp8LRX4ZB4oZCELZBRh4NHCEGXsqkCr4QIkDS'
